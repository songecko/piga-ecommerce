{% macro grid(products, size = 3) %}

<div class="grid">
	<div class="row-fluid">
    {% for product in products %}
        <div class="span{{ 12 / size }}">
            {% include 'PigalleBundle:Product:_product.html.twig' %}
        </div>
        {% if 0 == loop.index % size %}
            </div>
            <div class="row-fluid">
        {% endif %}
    {% endfor %}
	</div>
</div>

{% endmacro %}