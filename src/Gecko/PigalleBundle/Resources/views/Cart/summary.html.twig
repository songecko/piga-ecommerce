{% extends 'PigalleBundle::layout.html.twig' %}

{% form_theme form _self %}

{% block content %}
<div class="cart">
	<div class="contentTitle"><h3 class="titleSection container">Bolsa de compras</h3></div>
	<div class="container">
	{% if not cart.empty %}
		{{ form_errors(form) }}
		<form action="{{ path('sylius_cart_save') }}" method="post" novalidate>
			<table class="table" width="100%">
	  			<thead>
	    			<tr>
	      				<th width="8%">#</th>
						<th width="48%">MODELO</th>
						<th width="11%">CANTIDAD</th>
						<th width="15%">PRECIO UNITARIO</th>
						<th width="10%">TOTAL</th>
						<th width="8%">ELIMINAR</th>
					</tr>
				</thead>
				<tbody>
				{% for item in cart.items %}
		            {% include 'PigalleBundle:Cart:_item.html.twig' %}
		        {% endfor %}
				</tbody>
			</table>
			{{ form_rest(form) }}
			<div class="cartActions">
				<a href="{{ path('sylius_cart_clear') }}" class="button clearCartButton">VACIAR BOLSA DE COMPRAS</a>
				<button type="submit" class="button saveCartButton">GUARDAR CAMBIOS</button>
			</div>
			<div class="cartTotal">
				<div class="cartCoupon">
					<p>TENGO CUPON:</p>
					<input type="text" class="coupon">
				</div>
				<div class="total">
					<p class="title">TOTAL:</p>
					<div class="flag">
						<p>{{ cart.total|price }}</p>
						<div class="tail">&nbsp;</div>
					</div>
					<button href="{#{ path('sylius_checkout_start') }#}" class="button checkoutButton" href="#">REALIZAR COMPRA</button>
				</div>
			</div>
		</form>
	{% else %}
		<div class="emptyCart">
    		<h2>&iexcl;Tu bolsa de compras se encuentra vacia!</h2>
    		<div class="hr"><hr /></div>
    		<p>Visita nuestro <a href="#">online shop</a> para hacer compras.</p>
    	</div>
	{% endif %}
	</div>
</div>
{% endblock %}

{% block sylius_cart_item_row %}
	{{ parent() }}
	{% block form_message %}{% endblock %}
{% endblock %}
