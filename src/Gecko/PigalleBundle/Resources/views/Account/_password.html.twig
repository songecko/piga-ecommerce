<form action="{{ path('sylius_account_change_password') }}" {{ form_enctype(form) }} method="POST">
    {{ form_errors(form) }}	
    <fieldset>
    	<div class="form-group">
    		{{ form_label(form.current_password, "Contraseña actual:") }}
    		{{ form_errors(form.current_password) }}
    		{{ form_widget(form.current_password) }}
		</div>
        <div class="form-group">
    		{{ form_label(form.new.first, "Nueva contraseña:") }}
    		{{ form_errors(form.new.first) }}
    		{{ form_widget(form.new.first) }}
		</div>
		<div class="form-group">
    		{{ form_label(form.new.second, "Confirmar nueva contraseña:") }}
    		{{ form_errors(form.new.second) }}
    		{{ form_widget(form.new.second) }}
		</div>
		{{ form_rest(form) }}
    </fieldset>
    
    <button type="submit" class="button">Guardar</button>
</form>
