<h4>{{ 'sylius.form.frontend.password.title'|trans }}</h4>

<form action="{{ path('sylius_account_change_password') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
    <fieldset>
        {{ form_row(form.current_password, {'label': 'sylius.form.frontend.password.current'|trans}) }}
        {{ form_row(form.new.first, {'label': 'sylius.form.frontend.password.new'|trans}) }}
        {{ form_row(form.new.second, {'label': 'sylius.form.frontend.password.confirmation'|trans}) }}
    </fieldset>
    {{ form_rest(form) }}
</form>
