							<p><a>Leer Más</a></p>
						</div>
						<div class="span2">
							<h3>CONTACTO</h3>
							<p>Lorem ipsum dolor sit amet, consectetur adipiscing Lorem ipsum dolor sit amet, </p>
							<p><a>Leer Más</a></p>
						</div>
						<div class="span2">
							<h3>DATA FISCAL</h3>
							<img src="{{ asset('bundles/pigalle/images/img-qr-data-fiscal.png') }}" alt="Pigalle QR AFIP" />
							<p><a>Ver Más</a></p>
						</div>
						<div class="span2 logo">
							<a><img src="{{ asset('bundles/pigalle/images/logo-pigalle-copyright.png') }}" alt="Logo Pigalle Copyright" /></a>
						</div>
					</div>
				</div>
			</div>
		</div>
    
		{# modal gallery #}
		{% include 'PigalleBundle::gallery.html.twig' %}
		
        {# javascripts... #}
        {% block javascripts %}
        {% javascripts output='js/compiled/frontend.js'
            'http://code.jquery.com/jquery-1.10.0.min.js'
            '//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js'
            '@SyliusBackendBundle/Resources/assets/js/load-image.js'
            '@SyliusBackendBundle/Resources/assets/js/bootstrap-image-gallery.min.js'
            '@PigalleBundle/Resources/assets/js/main.js'            
        %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
        {% endblock %}
    </body>
</html>