{% extends 'SyliusBackendBundle::layout.html.twig' %}

{% import 'SyliusBackendBundle:Macros:buttons.html.twig' as buttons %}
{% from 'SyliusBackendBundle:Macros:misc.html.twig' import pagination %}
{% from 'GeckoNewsletterBundle:Backend/Newsletter:list.html.twig' import list %}
  				
{% block content %}
<div class="page-header">
    <h1>Envio del newsletter: {{ newsletter.title }}</h1>
</div>

<div class="well well-small">
    {{ buttons.show(path('gecko_newsletter_backend_newsletter_index'), "Volver") }}
</div>

<h3>Detalle del envio</h3>
<ul>
{% for recepient in toList %}
	<li>{{ recepient.subscriber.email }} ... {{ recepient.sent?'Enviado':'Error' }}
{% endfor %}
</ul>
{% endblock %}
