{% set hostUrl = app.request.scheme ~  '://' ~  app.request.host %}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
	<head>
		<title>Pigalle newsletter</title>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
		<link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Lato:300,400,700" type="text/css" />
		<style type="text/css">
		p { font-size: 12px; font-weight:400; margin: 0; }
		</style>
	</head>
	<body style="font-family: 'Lato', sans-serif; margin: 0;">
		<table background="{{ hostUrl ~ asset('bundles/pigalle/images/mailing/headerBackground.png') }}" width="610" height="133">
			<tr>
            	<td width="500">
					<p style="font-weight:700;margin: 50px 0 0 0;min-height: 30px;">{% block header_title %}<!-- NEWSLETTER PIGALLE <br> - -->{% endblock %}</p>
					<p style="margin: 0;">{{ "now"|date("d/m/Y") }}</p>
				</td>
				<td width="100">
					<a href="https://www.facebook.com/pages/PIGALLE/166228950080" style="margin-right: 10px;"><img src="{{ hostUrl ~ asset('bundles/pigalle/images/mailing/fb.png') }}" /></a>
					<a href="#"><img src="{{ hostUrl ~ asset('bundles/pigalle/images/mailing/pinterest.png') }}" /></a>
				</td>
        	</tr>
    	</table>
		<div id="content" style="margin-left: 15px;">
			{% block content %}{% endblock %}
		</div>
		<table background="{{ hostUrl ~ asset('bundles/pigalle/images/mailing/footerBackground.png') }}" width="610" height="80">
			<tr>
            	<td width="340">
					<p style="margin: 0;color: #FFFFFF;font-size: 10px;">Si tenés preguntas visitá nuestra página <a href="http://www.pigalle.com.ar" style="color: #FFFFFF;">www.pigalle.com.ar</a></p>
					<p style="margin: 0;color: #FFFFFF;font-size: 10px;">o conectate a través de nuestro e-mail <a href="mailto:ventas@pigalle.com.ar" style="color: #FFFFFF;">ventas@pigalle.com.ar</a>.</p>
					{% block unsuscribe %}{#<p style="margin: 0;color: #FFFFFF;font-size: 10px;">Para renunciar a nuestro newsletter haz <a href="#" style="color: #FFFFFF;">click acá</a>.</p>#}{% endblock %}
				</td>
				<td width="270">
					<p style="margin: 0; font-size: 10px; color: #FFFFFF;font-weight:700;">Copyright © 2014 PIGALLE</p>
					<p style="margin: 0; font-size: 10px; color: #FFFFFF;">Las Heras 674, Ramos Mejia</p>
				</td>
        	</tr>
    	</table>
	</body>
</html>