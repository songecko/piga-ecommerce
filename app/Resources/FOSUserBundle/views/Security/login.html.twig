{% extends 'PigalleBundle::layout.html.twig' %}

{% block content %}
<div class="security">
	<div class="contentTitle"><h3 class="titleSection container">Login</h3></div>
	<div class="container content">
		{% if error %}
		<div class="alert alert-error">
    		{{ error }}
		</div>
		{% endif %}
		<div class="row-fluid">
			<div class="span6 login">
				<form action="{{ path('fos_user_security_check') }}" method="post">
					<h2>TENGO CUENTA</h2>
					
					<fieldset>
	    				<div class="control-group">
	        				<label for="username" class="control-label">E-MAIL:</label>
	        				<div class="controls">
	            				<input type="text" id="username" name="_username" value="{{ last_username }}" />
	        				</div>
	    				</div>
	    				<div class="control-group">
	        				<label for="password" class="control-label">CONTRASEÃ‘A:</label>
	        				<div class="controls">
	            				<input type="password" id="password" name="_password" />
	        				</div>
	    				</div>
					</fieldset>
	    			<button type="submit" class="button" name="login">Iniciar Sesion</button>
				</form>
			</div>
			<div class="span6 register">
				<form action="{{ path('fos_user_security_login') }}" method="post" novalidate>
					<h2>NUEVO CLIENTE</h2>
					{{ form_widget(form) }}
					<button type="submit" class="button" name="register">Registrar</button>
				</form>
			</div>
		</div>
	</div>
</div>
{% endblock %}